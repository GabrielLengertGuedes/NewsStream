<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Notícias - NewsStream</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Estilos básicos para a tabela de notícias no painel admin */
        .admin-table-container {
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-top: 20px;
        }

        .admin-table-container h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .admin-table-container a.add-button {
            display: inline-block;
            background-color: #28a745; /* Cor verde para adicionar */
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 20px;
            transition: background-color 0.3s ease;
        }

        .admin-table-container a.add-button:hover {
            background-color: #218838;
        }

        .admin-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .admin-table th, .admin-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 0.9em;
        }

        .admin-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .admin-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .admin-table tr:hover {
            background-color: #f1f1f1;
        }

        .admin-table .action-buttons {
            display: flex;
            gap: 8px;
        }

        .admin-table .action-buttons button,
        .admin-table .action-buttons a {
            padding: 6px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.85em;
            transition: background-color 0.3s ease;
        }

        .admin-table .action-buttons .edit-button {
            background-color: #007bff;
            color: white;
        }

        .admin-table .action-buttons .edit-button:hover {
            background-color: #0056b3;
        }

        .admin-table .action-buttons .delete-button {
            background-color: #dc3545;
            color: white;
        }

        .admin-table .action-buttons .delete-button:hover {
            background-color: #c82333;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .admin-table, .admin-table tbody, .admin-table tr, .admin-table td {
                display: block;
                width: 100%;
            }
            .admin-table thead {
                display: none;
            }
            .admin-table tr {
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            }
            .admin-table td {
                text-align: right;
                padding-left: 50%;
                position: relative;
            }
            .admin-table td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: 45%;
                text-align: left;
                font-weight: bold;
            }
            .admin-table .action-buttons {
                justify-content: flex-end;
            }
        }
    </style>
</head>
<body>

    <div class="sidebar sidebar-dashboard">
        <h2>NewsStream</h2>
        <a href="/dashboard">Dashboard</a>
        <a href="/admin/gerenciar-noticias" class="active">Notícias</a>
        <a href="/categorias">Categorias</a>
        <a href="/comentarios">Comentários</a>
        <a href="/usuarios">Usuários</a>
        <a href="/logout">Sair</a>
    </div>

    <div class="dashboard-main">
        <header class="dashboard-header">
            <h1>Gerenciar Notícias</h1>
        </header>

        <div class="admin-table-container">
            <a href="/nova-noticia" class="add-button">Adicionar Nova Notícia</a>

            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (todasNoticias && todasNoticias.length > 0) { %>
                        <% todasNoticias.forEach(noticia => { %>
                            <tr>
                                <td data-label="ID"><%= noticia.id %></td>
                                <td data-label="Título"><%= noticia.titulo %></td>
                                <td data-label="Categoria"><%= noticia.categoria %></td>
                                <td data-label="Ações" class="action-buttons">
                                    <a href="/editar-noticia/<%= noticia.id %>" class="edit-button">Editar</a>
                                    <form action="/remover-noticia/<%= noticia.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-button" onclick="return confirm('Tem certeza que deseja remover esta notícia?');">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center;">Nenhuma notícia encontrada.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>