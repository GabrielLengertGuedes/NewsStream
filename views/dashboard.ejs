<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin - NewsStream</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div class="sidebar sidebar-dashboard">
        <h2>NewsStream</h2>
        <a href="/dashboard" class="active">Dashboard</a>
        <a href="/noticias">Notícias</a>
        <a href="/categorias">Categorias</a>
        <a href="/comentarios">Comentários</a>
        <a href="/usuarios">Usuários</a>
        <a href="/main">Página inicial</a>
        <a href="/logout">Sair</a>
    </div>

    <div class="dashboard-main">
        <div class="stats">
            <div class="stat-box"><h3><%= totalUsuarios %></h3><p>Total de Usuários</p></div>
            <div class="stat-box"><h3><%= totalNoticias %></h3><p>Notícias Publicadas</p></div>
            <div class="stat-box"><h3>581</h3><p>Acessos Hoje</p></div>
            <div class="stat-box"><h3>6</h3><p>Comentários Denunciados</p></div>
        </div>

        <div class="charts">
            <div class="chart-box">
                <h3>Notícias por categoria</h3>
                <img src="/images/graficoNoticias.jpg" alt="Gráfico de notícias por categoria" class="chart-image">
            </div>
            <div class="chart-box">
                <h3>Usuários por categoria</h3>
                <img src="/images/graficoUsuarios.jpg" alt="Gráfico de usuários por categoria" class="chart-image">
            </div>
        </div>

        <div class="news-table">
            <button class="new-button" onclick="location.href='/nova-noticia'">Nova Notícia</button>
            <h3>Gerenciar Notícias</h3>
            <table>
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Data</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% todasNoticias.forEach(noticia => { %>
                    <tr>
                        <td><%= noticia.titulo %></td>
                        <td><%= noticia.autor %></td>
                        <td><%= noticia.data %></td>
                        <td>Publicado</td>
                        <td>
                            <a href="/editar-noticia/<%= noticia.id %>" class="edit-link">Editar</a>
                            <form action="/remover-noticia/<%= noticia.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="delete-button">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
    </div>

</body>
</html>